<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/map_fragment"
android:padding="0dp">


    <fragment
        android:id="@+id/google_map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="-5dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_destinos"
        app:layout_constraintEnd_toEndOf="@+id/spinner_destinos"
        app:layout_constraintStart_toStartOf="@+id/spinner_destinos"
        app:layout_constraintTop_toTopOf="@+id/spinner_destinos" />


    <Button
        android:id="@+id/button_background_walk"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/button_background_bike"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/google_map_fragment"
        app:layout_constraintTop_toTopOf="@+id/button_background_bus" />

    <Button
        android:id="@+id/button_background_bike"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@+id/google_map_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_background_bus" />

    <Button
        android:id="@+id/button_background_bus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_background_bike"
        app:layout_constraintTop_toBottomOf="@+id/spinner_destinos" />


    <Spinner
        android:id="@+id/spinner_destinos"
        android:spinnerMode="dropdown"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image_walking_symbol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_background_walk"
        app:layout_constraintEnd_toEndOf="@+id/button_background_walk"
        app:layout_constraintStart_toStartOf="@+id/button_background_walk"
        app:layout_constraintTop_toTopOf="@+id/button_background_walk"
        app:srcCompat="@drawable/directions_walk_24px" />

    <ImageView
        android:id="@+id/image_bike_symbol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_background_bike"
        app:layout_constraintEnd_toEndOf="@+id/button_background_bike"
        app:layout_constraintStart_toStartOf="@+id/button_background_bike"
        app:layout_constraintTop_toTopOf="@+id/button_background_bike"
        app:srcCompat="@drawable/pedal_bike_24px" />

    <ImageView
        android:id="@+id/image_bus_symbol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_background_bus"
        app:layout_constraintEnd_toEndOf="@+id/button_background_bus"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button_background_bus"
        app:layout_constraintTop_toTopOf="@+id/button_background_bus"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/directions_bus_24px" />


</androidx.constraintlayout.widget.ConstraintLayout>