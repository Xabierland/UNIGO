<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo sólido -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Patrón de líneas usando shape en lugar de bitmap -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" />
            <stroke android:width="1dp" android:color="#E0E0FF" android:dashWidth="4dp" android:dashGap="4dp" />
        </shape>
    </item>
</layer-list>